{
  "name": "simple-amqp-client",
  "description": "A simple amqp client that provides an interface on a messaging-pattern abstraction level.",
  "version": "0.3.0",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "clean": "rimraf lib",
    "prebuild": "npm run clean",
    "build": "tsc",
    "test": "jest --config jestconfig.json --passWithNoTests",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\" --no-error-on-unmatched-pattern",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "docs": "typedoc --out docs src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sandro-salzmann/simple-amqp-client.git"
  },
  "keywords": [
    "simple",
    "amqp",
    "client",
    "messaging patterns",
    "pub/sub",
    "rpc"
  ],
  "author": "Sandro Salzmann",
  "license": "MIT",
  "dependencies": {
    "amqplib": "^0.8.0",
    "debug": "^4.3.4",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/amqplib": "^0.8.2",
    "@types/debug": "^4.1.7",
    "@types/jest": "^27.4.1",
    "@types/uuid": "^8.3.4",
    "jest": "^27.5.1",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.4",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typedoc": "^0.22.15",
    "typescript": "^4.6.3"
  },
  "files": [
    "lib/**/*"
  ]
}
